<div class='recipes'>
  {{#each model as |recipe|}}
  <div class="row">
   <div class="col-md-2">
    {{#link-to 'view' recipe class='view'}}
      {{recipe.name}}
    {{/link-to}}
   </div>
   <div class="col-md-2">
     {{#link-to 'edit' recipe class='edit'}}
       edit
     {{/link-to}}
   </div>
  </div>
  {{/each}}
</div>

